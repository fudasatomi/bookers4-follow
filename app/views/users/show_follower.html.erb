<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>Follow User</h2>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
						<th colspan="3"></th>
						<th colspan="3"></th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @user.followers.each do |user| %>
					<tr>
						<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
						<td><%= user.name%></td>
						<td>フォロー数：<%= user.followings.count %></td>
						<td>フォロワー数：<%= user.followers.count %></td>
						<% unless current_user?(user) %>
						<td>
						<% if current_user.following?(user) %>
							<td>
								<%= link_to relationship_path(:id), method: :delete do %>
								フォローを外す
								<% end %>
							</td>
						<% else %>
							<td>
								<%= link_to relationships_path, method: :post do %>
								フォローする
								<% end %>
      						</td>
      						<% end %>
      						<% end %>
						</td>
						<td><%= link_to 'Show', user_path(user) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
